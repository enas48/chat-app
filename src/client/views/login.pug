doctype html
html(lang='en')
 head
   meta(charset="UTF-8")
   meta(name="viewport" content="width=device-width, initial-scale=1.0")
   mate(http-equiv="X-UA-Compatible" content="IE=edge")
   link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
   link(href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&display=swap" rel="stylesheet")
   title chat group

   body
     .container
        main.d-flex.vh-100.py-2
           .col-md-8.col-lg-6.m-auto  
               .card
                   .card-body.p-4
                       .logo.d-flex.align-items-center.pb-4
                         span.material-icons code 
                         span.text devchallenges
                       h5.card-title.w-75 Login
                       form(action='/register', method='post')
                         div.form-group
                             label.sr-only(for="inlineFormInputGroup") email
                             .input-group.mb-3
                                   .input-group-prepend.border-right-0
                                     .input-group-text 
                                       span.material-icons email
                                   input.form-control.form-control-md-lg.border-left-0#inlineFormInputGroup(type="text" placeholder="Email")
                             label.sr-only(for="inlineFormInputGroup") password
                             .input-group.mb-3
                                   .input-group-prepend.border-right-0
                                     .input-group-text 
                                       span.material-icons https
                                   input.form-control.form-control-md-lg.border-left-0#inlineFormInputGroup(type="text" placeholder="Password")
                             button.btn.btn-primary.mb-2.w-100(type="submit") login      
                       p.text-muted.text-center or contine with these social profile
                       ul.text-center.list-inline
                         li.list-inline-item
                           a(href='/auth/google') 
                             img(src="../images/Google.svg")
                         li.list-inline-item 
                           a(href='/auth/facebbok')
                             img(src="../images/Facebook.svg")
                         li.list-inline-item 
                           a(href='/auth/twitter')
                             img(src="../images/Twitter.svg")
                         li.list-inline-item 
                           a(href='/auth/github')
                             img(src="../images/Gihub.svg")
                       p.mb-0.text-muted.text-center Don't have an acoount yet? 
                         a.text-primary(href='/') Register         
               footer.py-2.text-black-50.d-flex.justify-content-between.align-items-center  
                 span #{name}
                 span devchallengs.io  